<% include ../layout/header %>

<div></div>

<p>Hi <%= user.display_name || user.email %>!</p>
<p><b><%= client.name %></b> <%= __('OAUTH_DIALOG_TITLE')%>is requesting access to your account.</p>
<p>Do you approve?</p>

<form action="<%= link('/oauth2/dialog/authorize/decision') %>" method="post">
  <input name="transaction_id" type="hidden" value="<%= transactionID %>">
  <div>
  <input type="submit" value="<%= __('OAUTH_DIALOG_ALLOW')%>Allow" id="allow">
  <input type="submit" value="<%= __('OAUTH_DIALOG_DENY')%>Deny" name="cancel" id="deny">
  </div>
</form>


<% include ../layout/foot %>
