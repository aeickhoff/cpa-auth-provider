<% include layout/head %>

<div id="password-recovery">

    <div class="container">

        <div class="col-sm-6 col-sm-offset-3">

            <a class="" href="<%= link('/auth/local') %>"><span class="glyphicon glyphicon-chevron-left"></span>Back to login</a>

            <div id="login-panel" class="panel panel-default">
                <div class="panel-body">
                    <h1 class="title">
                        Password recovery
                    </h1>

                    <!-- show any messages that come back with authentication -->
                    <% if (message.length > 0) { %>
                        <div id="verification-success" class="text-success"><span class="glyphicon glyphicon-ok"></span> <span class="text"></span> </div>
                        <div id="verification-error" class="text-danger"><span class="glyphicon glyphicon-remove"></span> <span class="text"></span></div>
                    <% } %>

                    <!-- LOGIN FORM -->
                    <form id="password-form" action="/password/code" method="post">
                        <div class="form-group">
                            <label>Your email</label>
                            <input type="email" class="form-control" name="email">
                        </div>

                        <div class="form-group">
                            <div class="g-recaptcha" data-sitekey="<%= config.recaptcha.site_key %>" ></div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Reset password</button>

                    </form>

                </div>
            </div>

        </div>

    </div>

</div>

<script type="text/javascript">
    (function () {
        $('#password-form').submit(function(e) {
            e.preventDefault();

            $(this).ajaxSubmit({
                error: function (result) {
                    console.log("result", result);
                },
                success: function (response) {
                    console.log("response", response);
                }
            });
        });
    })();
</script>

<% include layout/foot %>
