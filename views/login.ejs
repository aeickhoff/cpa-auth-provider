<% include layout/header %>

<div id="login">

    <div class="container">

        <div class="col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3">

            <div id="login-panel">
                <h1 class="title text-center">
                    <%= __('LOGIN_TITLE') %>
                </h1>

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form class="login-form" action="<%= link('/login') %>" method="post">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email"
                               placeholder="<%= __('LOGIN_EMAIL_LABEL') %>">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password"
                               placeholder="<%= __('LOGIN_PASSWORD_LABEL') %>">
                        <a id="password-recovery"
                           class="btn-link"
                           href="<%= link('/password/recovery') %>"><%= __('LOGIN_FORGOT_PASSWORD_LINK') %></a>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block btn-large-submit"><%= __('LOGIN_LOGIN_BUTTON') %></button>
                </form>

                <p class="last-link"><%= __('LOGIN_NEED_AN_ACCOUNT_LINK') %> <a
                            class="btn-link" href="<%= link('/signup') %>"><%= __('LOGIN_SIGNUP_LINK') %></a></p>

            </div>

        </div>

    </div>

</div>

<% include layout/foot %>
